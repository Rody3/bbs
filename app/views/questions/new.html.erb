
 
<div class="new-question">
  <div class="errors">
    <% @errors.each do |error| %>
    <p><%= error %></p>
    <% end %>
  </div>
  <p>お気軽にお問い合わせください</p>
  <%= form_tag("/questions/create") do %>
    <div class="text-wrap">
      <input type="text" name="name" placeholder="名前" value="<%= params[:name] %>"/>
    </div>
    <div class="text-wrap">
      <input type="text" name="email" placeholder="メールアドレス" value="<%= params[:email] %>"/>
    </div>
    <div class="textarea-wrap">
      <textarea name="question" placeholder="お問い合わせ内容"><%= params[:question] %></textarea>
    </div>
    <input type="submit" value="送信" />
  <% end %>
</div>